{
  "name": "create-figma-plugin",
  "version": "4.0.0-alpha.0",
  "description": "Initialize a new Figma/FigJam plugin/widget using a template",
  "keywords": [
    "create-figma-plugin",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/create-figma-plugin"
  },
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "files": [
    "lib",
    "templates"
  ],
  "bin": {
    "create-figma-plugin": "./lib/cli.js"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "clean": "rimraf --glob '*.log' lib tsconfig.tsbuildinfo",
    "fix": "concurrently npm:fix:js npm:fix:json",
    "fix:js": "eslint --fix '{src,test}/**/*.ts'",
    "fix:json": "prettier --log-level error --write '*.json'",
    "lint": "eslint '{src,test}/**/*.ts'",
    "test": "ava --serial 'test/**/*.ts'"
  },
  "dependencies": {
    "@create-figma-plugin/common": "^4.0.0-alpha.0",
    "@inquirer/select": "^2.4.7",
    "@sindresorhus/slugify": "^2.2.1",
    "globby": "^14.0.2",
    "is-utf8": "^0.2.1",
    "kleur": "^4.1.5",
    "lodash.template": "^4.5.0",
    "package-json": "^10.0.1",
    "param-case": "^3.0.4",
    "path-exists": "^5.0.0",
    "sade": "^1.8.1",
    "semver": "^7.6.3",
    "titleize": "^4.0.0"
  },
  "devDependencies": {
    "@types/is-utf8": "0.2.3",
    "@types/lodash.template": "4.5.3",
    "@types/node": "22.2.0",
    "@types/rimraf": "3.0.2",
    "@types/semver": "7.5.8",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "ava": "6.1.3",
    "concurrently": "8.2.2",
    "eslint": "8.55.0",
    "eslint-config-yuanqing": "0.0.9",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "prettier": "3.1.0",
    "rimraf": "6.0.1",
    "tsx": "4.17.0",
    "typescript": "5.4.5"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "failFast": true,
    "nodeArguments": [
      "--import",
      "tsx"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing",
    "root": true,
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "templates"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier"
}
